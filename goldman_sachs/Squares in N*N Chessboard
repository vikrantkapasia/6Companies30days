class Solution {
  public:
    long long squaresInChessBoard(long long n) {
        // code here
        if (n==0)
       { return 0;}
        
        long long t = ((n*(n+1)*(2*n+1))/6);
        
        return t;
    }
};

// { Driver Code Starts.
int main() {
    int t;
    cin >> t;
    while (t--) {
        long long N;
        
        cin>>N;

        Solution ob;
        cout << ob.squaresInChessBoard(N) << endl;
    }
    return 0;
}  // } Driver Code End
